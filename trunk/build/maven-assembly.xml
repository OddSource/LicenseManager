<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
		                      http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>all</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<includeSiteDirectory>false</includeSiteDirectory>
	<fileSets>
		<fileSet>
			<directory>out/artifacts/dist</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>/dist</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>out/artifacts/sources</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>/sources</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>out/artifacts</directory>
			<includes>
				<include>*-javadoc.jar</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>build/jar/META-INF/LICENSE.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>build/jar/META-INF/NOTICE.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>